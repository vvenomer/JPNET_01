<Window x:Class="JPNET_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JPNET_01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="countryName" HorizontalAlignment="Left" Height="24" Margin="574,10,0,0" TextWrapping="Wrap" Text="Cape Verde" VerticalAlignment="Top" Width="209" KeyUp="TextBox_KeyUp"/>
        <Label Name="countryPopulation" Content="Label" HorizontalAlignment="Left" Margin="574,39,0,0" VerticalAlignment="Top" Width="209"/>
        <ComboBox Name="countryList" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="SelectedCountryInComboBox" Loaded="ComboBoxLoaded"/>
        <RichTextBox Name="countryInfo" HorizontalAlignment="Left" Height="372" Margin="10,37,0,0" VerticalAlignment="Top" Width="559"/>
        <Button Content="Load All Data" HorizontalAlignment="Left" Margin="135,10,0,0" VerticalAlignment="Top" Width="90" Height="22" Click="Button_Click"/>


    </Grid>
</Window>
